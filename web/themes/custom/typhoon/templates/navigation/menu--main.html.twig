{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.

  * TODO: When a final Menu is decided. Need to be made a11y. Takes a combo of 'role' attributes and JS

 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see https://twig.symfony.com/doc/1.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0) }}


{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}

    {% set mainNavTopItem = 'main-nav--item js-main-nav-select relative md:px-0 transition-colors' %}
    {% set mainNavDropdownList = 'dropdown--item overflow-hidden' %}
    {% set thirdLevel = 'py-sm md:py-0 pl-sm md:pl-0' %}

    {% set mainNavClasses = 'main-nav--list flex flex-col md:flex-row justify-end m-0 border-t-2 md:border-t-0 border-red-600 md:bg-white'  %}

    {% set secondNavClasses = 'main-nav--dropdown main-nav--sub-list hidden overflow-hidden md:absolute l-0 ml-0 mt-xs md:mt-0 py-0 px-lg md:py-lg list-none md:bg-white rounded-sm md:shadow-light-2 md:group-hover:block md:group-focus:block'%}

    {% set thirdNavClasses = 'main-nav--third-list md:hidden md:absolute md:w-1/2 md:h-full top-0 left-1/2 px-lg md:py-lg md:border-l-2 md:zborder-warm-grey-50'%}

    {% if menu_level == 0 %}
      {# *sets top level nav #}
      <ul class="{{mainNavClasses}}">
      {% elseif menu_level == 1 %}
        {# *sets second level nav #}
        <ul class="{{secondNavClasses}}">
        {% else %}
          {# *sets third level nav #}
          <ul class="{{thirdNavClasses}} ">
          {% endif %}
          {# ! end of nav <ul> classes #}
          {% for item in items %}
            {# Assign classes based on if the item is an open parent, closed parent, active, or a has a submenu. #}
            {% set topNavClasses = [
              mainNavTopItem,
              item.is_expanded ? 'main-nav--item_expanded',
              item.is_collapsed ? 'main-nav--item_collapsed',
              item.in_active_trail ? 'main-nav--item_active-trail',
              item.below ? 'dropdown-menu group',
              'relative',
            ] %}

            {% set secondNavClasses = [
              mainNavDropdownList,
              item.is_expanded ? 'main-nav--item_expanded',
              item.is_collapsed ? 'main-nav--item_collapsed',
              item.in_active_trail ? 'main-nav--item_active-trail',
              item.below ? 'dropdown-menu group',
              'second-nav--item md:w-1/2'
            ] %}

            {% set thirdNavClasses = [
              thirdLevel,
              item.is_expanded ? 'main-nav--item_expanded',
              item.is_collapsed ? 'main-nav--item_collapsed',
              item.in_active_trail ? 'main-nav--item_active-trail',
              item.below ? '',
              'relative',
            ] %}

            {% set mainNavTopLinks = [ 'main-nav--link inline-block py-md px-2xl w-full md:w-auto bg-red-500 md:bg-white text-white md:text-red-500 hover:bg-red-600 md:hover:bg-red-500 hover:text-white focus:bg-red-600 md:focus:bg-red-500 focus:text-white',
              item.in_active_trail ? 'is-active bg-red-500 text-white',
            ] %}

            {% set secondLevelLinks = [ 'relative block py-sm pl-md md:pl-lg pr-lg text-md font-semibold transition-all duration-300 hover:text-warm-grey-200 md:hover:text-red-500 focus:text-white md:focus:text-red-500',
              item.in_active_trail ? 'is-active text-white md:text-red-500' : 'text-white md:text-black',
            ] %}

            {% set thirdLevelLinks = ['text-white md:text-red-500 font-normal hover:text-warm-grey-200 md:hover:text-red-500',
              item.in_active_trail ? 'is-active text-white md:text-red-500' : 'text-white md:text-black',
            ] %}

            {% if menu_level == 0 and item.below %}
              <li{{item.attributes.addClass(topNavClasses)}}>
                <div class="flex mt-xs md:mt-0">
                  {{ link(item.title, item.url, {'class': mainNavTopLinks }) }}
                  <div class="icon-wrap flex icon-wrap  md:hidden flex-shrink-0 justify-center items-center bg-yellow-500 transition-color duration-300 hover:bg-yellow-600 w-3xl">
                    <i class=" fas fa-plus text-red-500 text-lg"></i>
                  </div>
                </div>
              {% elseif menu_level == 0 %}
                <li{{item.attributes.addClass(topNavClasses)}}>
                  <div class="flex mt-xs md:mt-0">
                    {{ link(item.title, item.url, {'class': mainNavTopLinks }) }}
                    <a href="{{item.url}}">
                      <div class="icon-wrap flex icon-wrap  md:hidden flex-shrink-0 justify-center items-center bg-yellow-500 transition-color duration-300 hover:bg-yellow-600 w-3xl h-full">
                        <i class=" fas fa-chevron-right text-red-500 text-lg"></i>
                      </div>
                    </a>
                  </div>
                {% elseif menu_level == 1 %}
                  <li{{item.attributes.addClass(secondNavClasses)}}>
                    {{ link(item.title, item.url, {'class': secondLevelLinks }) }}
                  {% elseif menu_level == 2 %}
                    <li{{item.attributes.addClass(thirdNavClasses)}}>
                      {{ link(item.title, item.url, {'class': thirdLevelLinks }) }}
                    {% endif %}
                    {% if item.below %}
                      {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          {% endmacro %}
