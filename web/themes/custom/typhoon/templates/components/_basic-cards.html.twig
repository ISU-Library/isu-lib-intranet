{% macro basic(data) %}

  {% set defaultData = {
        color: '',
        link: '',
        title: '',
        category: '',
        icon: '',
        text: '',
        linkText: '',
    } %}

  {% set data = data ? defaultData|merge(data) : defaultData %}

  <a role="Link" href="{{ data.link }}" class="basic-card--link">
    <div class="bg-white flex flex-col basic-card {{data.color}}">
      <span class="aria-text border">
        {{ data.title }}
      </span>
      <div class="basic-card--text-wrap h-full flex flex-col pt-xl pr-lg pb-2xl pl-xl xs:pt-md xs:pr-sm xs:pb-lg xs:pl-md">
        {% if data.category %}
          <span class="basic-card--category text-sm mb-xs">
            {{ data.category }}
          </span>
        {% endif %}
        {% if data.icon %}
          <span class="basic-card--category icon-{{ data.icon }} mb-xs text-2xl"></span>
        {% endif %}
        <h3 class="basic-card--title">
          {{ data.title }}
        </h3>
        <p class="basic-card--desc pb-md">
          {{ data.text}}
        </p>
        <div class="cta--wrap">
          <div class="cta">
            {{ data.linkText }}
          </div>
        </div>
      </div>
    </div>
  </a>
{% endmacro %}

{% macro basicImg(data) %}

  {% set defaultData = {
        imgSrc: '',
        imgAlt: '',
        color: '',
        link: '',
        title: '',
        category: '',
        text: '',
        linkText: '',
    } %}

  {% set data = data ? defaultData|merge(data) : defaultData %}

  <a role="Link" href="{{data.link}}" class="basic-card--link">
    <div class="flex flex-col basic-card {{data.color}} basic-card--image bg-white">
      <div class="basic-card--image-wrap">
        <figure>
          <img src="{{ data.imgSrc }}" alt="{{data.imgAlt}}"/>
          <div class="image-overlay"></div>
        </figure>
        <div class="basic-card--text-wrap pt-xl pr-lg pb-md pl-xl xs:pt-md xs:pr-sm xs:pb-md xs:pl-md">
          {% if data.category %}
            <span class="basic-card--category mb-xs">
              {{ data.category }}
            </span>
          {% endif %}
          <h3 class="basic-card--title">
            {{ data.title }}
          </h3>
        </div>
      </div>
      <span class="aria-text">
        {{ data.title }}
      </span>
      <div class="basic-card--text-wrap pt-md pr-lg pb-2xl pl-xl xs:pt-md xs:pr-sm xs:pb-lg xs:pl-md">
        <p class="basic-card--desc pb-md">
          {{ data.text}}
        </p>
        <div class="cta--wrap">
          <div class="cta">
            {{ data.linkText }}
          </div>
        </div>
      </div>
    </div>
  </a>
{% endmacro %}
