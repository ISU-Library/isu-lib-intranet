    <div class="basic-card basic-card--image flex flex-col relative overflow-hidden border-l-4 {{data.color}} bg-white {{cardColor}} shadow-light-2 transition-all duration-300 group">
      <div class="basic-card--image-wrap relative">
        <figure class="relative overflow-hidden m-0">
          <img class="absolute-center max-w-full w-full h-auto" src="{{ data.imgSrc }}" alt="{{data.imgAlt}}"/>
          <div class="image-overlay"></div>
        </figure>
        <div class="basic-card--text-wrap absolute left-0 bottom-0 h-auto border-0 pt-xl pr-lg pb-md pl-xl xs:pt-md xs:pr-sm xs:pb-md xs:pl-md">
          {% if data.category %}
            <span class="basic-card--category text-white mb-xs">
              {{ data.category }}
            </span>
          {% endif %}
          <h3 class="basic-card--title text-white">
            {{ data.title }}
          </h3>
        </div>
      </div>
      <span class="aria-text">
        {{ data.title }}
      </span>
      <div class="basic-card--text-wrap relative pt-md pr-lg pb-2xl pl-xl xs:pt-md xs:pr-sm xs:pb-lg xs:pl-md">
        <p class="basic-card--desc flex-grow font-normal pb-md {{textColor}}">
          {{ data.text}}
        </p>
        <div class="cta--wrap">
          <div class="cta {{accentColor}}">
            {{ data.linkText }}
          </div>
        </div>
      </div>
    </div>
  </a>
{% endmacro %}
