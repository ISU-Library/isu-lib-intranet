    template: true,
    lead: '',
    text: ''
  } %}

  {% set data = data ? defaultData|merge(data) : defaultData %}
  {# 
 {{item.in_active_trail? 'is-active': ''}}" #}

  <div
    class="gen-con--block max-w-[50rem] mx-auto mb-2xl text-block {{
    data.lead
    }} "
  >
    {% if data.template %}
      {{ data.text }}
    {% else %}
      <p class="mt-0">{{ data.text }}</p>
    {% endif %}
